<?xml version="1.0" encoding="utf-8"?>

<scene>

	<camera>
		<pos>0 -2 1</pos>
		<up>0 0 1</up>
		<forwards>0 1 -0.1</forwards>

		<aperture_radius>0.0001</aperture_radius>
		<focus_distance>3.0</focus_distance>
		<aspect_ratio>1.33</aspect_ratio>
		<sensor_width>0.036</sensor_width>
		<lens_sensor_dist>0.02</lens_sensor_dist>
		<white_balance>D65</white_balance>
	</camera>

  <tonemapping>
		<linear>
			<scale>1.0</scale>
		</linear>
	</tonemapping>
	
	<rectanglelight>
		<pos>0.0 0 3</pos>
		<width>2.0</width>
		<height>2.0</height>

		<spectrum>
			<blackbody>
				<temperature>6400</temperature>
				<gain>0.0001</gain>
			</blackbody>
		</spectrum>
	</rectanglelight>
	
	

	<material>
		<name>white</name>
		<diffuse>
			<colour>0.7 0.7 0.7</colour>
		</diffuse>
	</material>

	<!--Ground Plane-->
	<mesh>
		<name>mesh1</name>
		<normal_smoothing>false</normal_smoothing>
		<embedded>
			<expose_uv_set>
				<index>0</index>
				<name>albedo</name>
			</expose_uv_set>

			<vertex pos="-10 -10 0" normal="0 0 1" uv0="0 0" />
			<vertex pos="-10 10 0" normal="0 0 1" uv0="0 10000" />
			<vertex pos="10 10 0" normal="0 0 1" uv0="10000 10000" />
			<vertex pos="10 -10 0" normal="0 0 1" uv0="10000 0" />

			<triangle_set>
				<material_name>white</material_name>
				<tri>0 1 2</tri>
				<tri>0 2 3</tri>
			</triangle_set>
		</embedded>
	</mesh>

	<model>
		<pos>0 0 0</pos>
		<scale>1.0</scale>
		<mesh_name>mesh1</mesh_name>
	</model>

	
	<!--mesh>
		<name>block</name>
		<normal_smoothing>false</normal_smoothing>
		<external>
			<path>../flatblock.3ds</path>
		</external>
	</mesh-->


  <medium>
    <name>medium1</name>

    <basic>
      <ior>1.0</ior>
      <cauchy_b_coeff>0.00001</cauchy_b_coeff>
      <absorption_coefficient_spectrum>
        <uniform>
          <value>0</value>
        </uniform>
      </absorption_coefficient_spectrum>
    </basic>
  </medium>

  <material>
    <name>dummy</name>

    <specular>
      <transparent>true</transparent>
      <internal_medium_name>medium1</internal_medium_name>
    </specular>
    <!--diffuse>
      <colour>1 0 0</colour>
    </diffuse-->
  </material>
	
	<!--model>
		<rotation>
			<matrix>
				1 0 0 0 1 0 0 0 1
			</matrix>
		</rotation>
		<pos>0 0 0.2</pos>
		<scale>0.01</scale>
		<mesh_name>block</mesh_name>
	</model-->
  <sphere>
    <material_name>dummy</material_name>
    <center>0 0 0.5</center>
    <radius>0.5</radius>
  </sphere>
	

</scene>


