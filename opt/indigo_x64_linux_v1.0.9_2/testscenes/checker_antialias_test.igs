<?xml version="1.0" encoding="utf-8"?>

<scene>
	<background>
		<spectrum>  
			<blackbody>
				<temperature>5000</temperature>
				<gain>0.00002</gain>
			</blackbody>
		</spectrum>
	</background>

	<tonemapping>
		<reinhard>
			<pre_scale>1.0</pre_scale>
			<post_scale>1.0</post_scale>
		</reinhard>
	</tonemapping>

	<camera>
		<pos>0 -5.2 2.5</pos>
		<up>0 0 1</up>
		<forwards>0 1 -0.3</forwards>

		<focus_distance>2.000000</focus_distance>
		<aspect_ratio>1.333</aspect_ratio>
		<aperture_radius>0.0001</aperture_radius>
		<sensor_width>0.036</sensor_width>
		<lens_sensor_dist>0.04</lens_sensor_dist>
		<white_balance>D65</white_balance>
	</camera>

	<!-- Ground Material -->
	<material>
		<name>checker</name>

		<diffuse>
			<colour>1 1 1</colour>

			<albedo_texture>
				<uv_set>albedo</uv_set>
				<path>checker.jpg</path>
				<exponent>2.3</exponent>
			</albedo_texture>
		</diffuse>
	</material>

	<!-- Define a Mesh -->
	<mesh>
		<name>mesh1</name>

		<normal_smoothing>false</normal_smoothing>
		<embedded>
			<expose_uv_set>
				<index>0</index>
				<name>albedo</name>
			</expose_uv_set>

			<expose_uv_set>
				<index>0</index>
				<name>bump</name>
			</expose_uv_set>

			<vertex pos="-1000 -1000 0" normal="0 0 1" uv0="0 0" />
			<vertex pos="-1000 1000 0" normal="0 0 1" uv0="0 1000" />
			<vertex pos="1000 1000 0" normal="0 0 1" uv0="1000 1000" />
			<vertex pos="1000 -1000 0" normal="0 0 1" uv0="1000 0" />

			<triangle_set>
				<material_name>checker</material_name>
				<tri>0 1 2</tri>
				<tri>0 2 3</tri>
			</triangle_set>
		</embedded>
	</mesh>

	<model>
		<pos>0 0 0</pos>
		<scale>1</scale>
		<mesh_name>mesh1</mesh_name>
	</model>


</scene>
