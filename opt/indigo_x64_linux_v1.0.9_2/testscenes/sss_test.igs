			<vertex pos="1.000000 1.000000 -1.000000" normal="1.000000 -0.000000 0.000000"/>
			<vertex pos="1.000000 1.000000 1.000000" normal="1.000000 -0.000000 0.000000"/>
			<vertex pos="0.999999 -1.000001 1.000000" normal="1.000000 -0.000000 0.000000"/>
			<vertex pos="1.000000 -1.000000 -1.000000" normal="1.000000 -0.000000 0.000000"/>
			<vertex pos="1.000000 -1.000000 -1.000000" normal="-0.000000 -1.000000 -0.000000" uv0="1 0" />
			<vertex pos="0.999999 -1.000001 1.000000" normal="-0.000000 -1.000000 -0.000000" uv0="1 1" />
			<vertex pos="-1.000000 -1.000000 1.000000" normal="-0.000000 -1.000000 -0.000000" uv0="0 1" />
			<vertex pos="-1.000000 -1.000000 -1.000000" normal="-0.000000 -1.000000 -0.000000" uv0="0 0" />
