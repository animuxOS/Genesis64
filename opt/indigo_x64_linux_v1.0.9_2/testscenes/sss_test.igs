		<pos>-1.1 0.5 -1.4</pos>
		<mesh_name>block</mesh_name>
	</model-->
	
	
	<!-- Bar Light -->
	<mesh>
		<name>lightmesh1</name>
	
		<normal_smoothing>false</normal_smoothing>
		<embedded>
				
			<vertex pos="-4 0 0.1" normal="0 -1 0" />
			<vertex pos="4  0 0.1" normal="0 -1 0"  />
			<vertex pos="4  0 -0.1" normal="0 -1 0" />
			<vertex pos="-4 0 -0.1" normal="0 -1 0"  />
				
			<triangle_set>						
				<material_name>white</material_name>
				<tri>0 2 1</tri>
				<tri>0 3 2</tri>
			</triangle_set>
		</embedded>
	</mesh>
	
	<meshlight>
		<pos>0 2.5 1</pos>
		<scale>1</scale>
		<mesh_name>lightmesh1</mesh_name>
		
		<spectrum>
			<blackbody>
				<temperature>6500</temperature>
				<gain>0.0001</gain>
			</blackbody>
		</spectrum>
	</meshlight>
	
	
	
	
	
	<mesh>
		<name>statue</name>
	
		<normal_smoothing>false</normal_smoothing>
		<scale>12.0</scale>
		<external>
			<path>..\ply\happy_recon\happy_vrip_res4.ply</path>
