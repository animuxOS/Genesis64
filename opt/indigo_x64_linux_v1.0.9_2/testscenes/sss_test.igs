				<tri>2 3 0</tri>
				<tri>4 5 6</tri>
				<tri>6 7 4</tri>
				<tri>8 9 10</tri>
				<tri>10 11 8</tri>
				<tri>12 13 14</tri>
				<tri>14 15 12</tri>
