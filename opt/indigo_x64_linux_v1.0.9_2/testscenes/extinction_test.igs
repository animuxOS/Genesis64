<?xml version="1.0" encoding="utf-8"?>

<scene>
	<tonemapping>
		<reinhard>
			<pre_scale>1.0</pre_scale>
			<post_scale>1.0</post_scale>
		</reinhard>
	</tonemapping>

	<camera>
		<pos>-0.3 -4.2 0.9</pos>
		<up>0 0 1</up>
		<forwards>0.2 1 0.2</forwards>
		
		<aperture_radius>0.001</aperture_radius>
		<focus_distance>10000.0</focus_distance>
		<aspect_ratio>1.33</aspect_ratio>
		<sensor_width>0.036</sensor_width>
		<lens_sensor_dist>0.02</lens_sensor_dist>
		<white_balance>E</white_balance>
	</camera>
	
	<!--Ground Plane-->
	<material>
		<name>white</name>
		<diffuse>
			<colour>0.7 0.7 0.7</colour>
		</diffuse>
	</material>
	<mesh>
		<name>ground_plane_mesh</name>
		<normal_smoothing>false</normal_smoothing>
		<embedded>
			<expose_uv_set>
				<index>0</index>
				<name>albedo</name>
			</expose_uv_set>

			<vertex pos="-10 -10 0" normal="0 0 1" />
			<vertex pos="-10 10 0" normal="0 0 1" />
			<vertex pos="10 10 0" normal="0 0 1" />
			<vertex pos="10 -10 0" normal="0 0 1" />

			<triangle_set>
				<material_name>white</material_name>
				<tri>0 1 2</tri>
				<tri>0 2 3</tri>
			</triangle_set>
		</embedded>
	</mesh>

	<model>
		<pos>0 0 0</pos>
		<scale>1.0</scale>
		<mesh_name>ground_plane_mesh</mesh_name>
	</model>
	
	
	<!--Area Light-->
	<rectanglelight>
		<pos>0.8 5 5</pos>
		<width>1.0</width>
		<height>1.0</height>
		
		<spectrum>
			<!--blackbody>
				<temperature>3500</temperature>
				<gain>0.0001</gain>
			</blackbody-->
			
			<peak>
				<peak_min>400</peak_min>
				<peak_width>500</peak_width>
				<base_value>0</base_value>
				<peak_value>400</peak_value>	
			</peak>
			
			<!--rgb>
				<rgb>1 1 1</rgb>
			</rgb-->
			
		</spectrum>	
	</rectanglelight>
	
	
	<!-- Sphere 1 -->
	<medium>
		<name>medium1</name>
		
		<basic>
			<ior>1.5</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<rgb>
					<rgb>0 0 0</rgb>
          <gamma>1</gamma>
				</rgb>
			</absorption_coefficient_spectrum>
		</basic>
	</medium>
	
	<material>
		<name>sphere1mat</name>
		
		<specular>
			<transparent>true</transparent>
			<internal_medium_name>medium1</internal_medium_name>	
		</specular>
	</material>
	
	<sphere>
		<center>-1.2 -0.8 0.51</center>
		<radius>0.5</radius>

		<material_name>sphere1mat</material_name>
	</sphere>
	
	<!-- Sphere 2 -->
	<medium>
		<name>medium2</name>
		
		<basic>
			<ior>1.5</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<rgb>
					<rgb>0 10 10</rgb>
          <gamma>1</gamma>
				</rgb>
			</absorption_coefficient_spectrum>
		</basic>
	</medium>
	
	<material>
		<name>sphere2mat</name>
		
		<specular>
			<transparent>true</transparent>
			<internal_medium_name>medium2</internal_medium_name>	
		</specular>
	</material>
	
	<sphere>
		<center>0 -0.8 0.51</center>
		<radius>0.5</radius>

  		<material_name>sphere2mat</material_name>
	</sphere>
	
	<!-- Sphere 3 -->
	<medium>
		<name>medium3</name>
		
		<basic>
			<ior>1.5</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<rgb>
					<rgb>10 0 10</rgb>
          <gamma>1</gamma>
				</rgb>
			</absorption_coefficient_spectrum>
		</basic>
	</medium>
	
	<material>
		<name>sphere3mat</name>
		
		<specular>
			<transparent>true</transparent>
			<internal_medium_name>medium3</internal_medium_name>	
		</specular>
	</material>
	
	<sphere>
		<center>1.2 -0.8 0.51</center>
		<radius>0.5</radius>

		<material_name>sphere3mat</material_name>	
	</sphere>

</scene>
