<?xml version="1.0" encoding="utf-8"?>

<scene>

  <camera>
    <pos>0 -1 0</pos>
    <up>0 0 1</up>
    <forwards>0 1 0</forwards>


	  <focus_distance>1.0</focus_distance>
	  <aspect_ratio>1.0</aspect_ratio>
	  <sensor_width>0.036</sensor_width>
	  <lens_sensor_dist>0.05</lens_sensor_dist>
	  <white_balance>E</white_balance>

	  <aperture_radius>0.00005</aperture_radius> <!-- Aperture diameter = 0.0001 m -->
	  
	  <aperture_shape>
		  <circular/>
	  </aperture_shape>

	  <!--<aperture_shape>
		  <image>
			<path>c:\programming\indigo\trunk\indigo_x86\indigo_aperture.png</path>
		  </image>
	  </aperture_shape>-->

	  <!--<aperture_shape>
		  <generated>
			  <num_blades>3</num_blades>
			  <blade_offset>0.3</blade_offset>
			  <blade_curvature_radius>0.5</blade_curvature_radius>
			  <start_angle>0.0</start_angle>
		  </generated>
	  </aperture_shape>-->

	  <!--<obstruction_map>
		  <path>my_obstruction_map.png</path>
		</obstruction_map>-->
  </camera>

  <tonemapping>
    <linear>
      <scale>1000000000</scale>
    </linear>
  </tonemapping>

	<renderer_settings>
		<width>1000</width>
		<height>1000</height>
	</renderer_settings>


  <!-- Define a Mesh -->
  <mesh>
    <name>lightmesh</name>

    <normal_smoothing>false</normal_smoothing>

    <embedded>
      <expose_uv_set>
        <index>0</index>
        <name>albedo</name>
      </expose_uv_set>

      <vertex pos="0 0 0" normal="0 -1 0" uv0="0 0" />
      <vertex pos="0 0 0.001" normal="0 -1 0" uv0="0 1" />
      <vertex pos="0.001 0 0.001" normal="0 -1 0" uv0="1 1" />
      <vertex pos="0.001 0 0" normal="0 -1 0" uv0="1 0" />

      <triangle_set>
        <material_name>mat1</material_name>

        <tri>0 2 1</tri>
        <tri>0 3 2</tri>
      </triangle_set>
    </embedded>
  </mesh>


  <meshlight>
    <rotation>
      <matrix>
        1 0 0 0 1 0 0 0 1
      </matrix>
    </rotation> 
    <pos>0.0 0 0</pos>
    <scale>1.0</scale>
    <mesh_name>lightmesh</mesh_name>

    <!-- define the emission spectrum-->
    <spectrum>
		<peak>
			<base_value>0</base_value>
			<peak_value>100000</peak_value>
			<peak_min>495</peak_min>
			<peak_width>10</peak_width>
		</peak>
    </spectrum>
  </meshlight>

</scene>
    


