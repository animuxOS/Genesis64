	<rectanglelight>
		<pos>0.0 0 1.995</pos>
		<width>0.3</width>
		<height>0.3</height>

		<spectrum>
			<blackbody>
				<temperature>6400</temperature>
				<gain>0.001</gain>
			</blackbody>
		</spectrum>
	</rectanglelight>


	<medium>
		<name>glass</name>
		<precedence>10</precedence>
		<basic>
			<ior>1.0</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<uniform>
					<value>0</value>
				</uniform>
			</absorption_coefficient_spectrum>
		</basic>
	</medium>
	
	<medium>
		<name>blue</name>
		<precedence>20</precedence>
		<basic>
			<ior>1.5</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<rgb>
					<rgb>10 10 0</rgb>
					<gamma>1</gamma>
				</rgb>
			</absorption_coefficient_spectrum>
		</basic>
	</medium>

	<medium>
		<name>red</name>
		<precedence>5</precedence>
		<basic>
			<ior>1.5</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<rgb>
					<rgb>0 10 10</rgb>
					<gamma>1</gamma>
				</rgb>
			</absorption_coefficient_spectrum>
		</basic>
	</medium>

	<material>
		<name>glass</name>

		<specular>
			<transparent>true</transparent>
			<internal_medium_name>glass</internal_medium_name>
		</specular>
	</material>
	
	<material>
		<name>blue_mat</name>

		<specular>
			<transparent>true</transparent>
			<internal_medium_name>blue</internal_medium_name>
		</specular>
	</material>
	<material>
		<name>red_mat</name>

		<specular>
			<transparent>true</transparent>
			<internal_medium_name>red</internal_medium_name>
		</specular>
	</material>

	<sphere>
		<center>-0.9 0.0 0.6</center>
		<radius>0.5</radius>

		<material_name>red_mat</material_name>
	</sphere>
	
	<sphere>
		<center>-0.3 0.0 0.6</center>
		<radius>0.5</radius>

		<material_name>glass</material_name>
	</sphere>
	
	<sphere>
		<center>0.3 0.0 0.6</center>
		<radius>0.5</radius>

		<material_name>glass</material_name>
	</sphere>
	
	<sphere>
		<center>0.9 0.0 0.6</center>
		<radius>0.5</radius>

		<material_name>blue_mat</material_name>
	</sphere>
</scene>


