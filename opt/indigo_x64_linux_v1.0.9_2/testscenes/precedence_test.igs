<?xml version="1.0" encoding="utf-8"?>

<scene>

	<camera>
		<pos>0 -2 1</pos>
		<up>0 0 1</up>
		<forwards>0 1 0.02</forwards>

		<aperture_radius>0.0001</aperture_radius>
		<focus_distance>3.0</focus_distance>
		<aspect_ratio>1.33</aspect_ratio>
		<sensor_width>0.036</sensor_width>
		<lens_sensor_dist>0.02</lens_sensor_dist>
		<white_balance>D65</white_balance>
	</camera>

	<tonemapping>
		<reinhard>
			<pre_scale>1.0</pre_scale>
			<post_scale>1.0</post_scale>
		</reinhard>
	</tonemapping>

	<!--Ground Plane-->
	<material>
		<name>white</name>
		<diffuse>
			<colour>0.7 0.7 0.7</colour>
		</diffuse>
	</material>
	<mesh>
		<name>ground_plane_mesh</name>
		<normal_smoothing>false</normal_smoothing>
		<embedded>
			<expose_uv_set>
				<index>0</index>
				<name>albedo</name>
			</expose_uv_set>

			<vertex pos="-10 -10 0" normal="0 0 1" />
			<vertex pos="-10 10 0" normal="0 0 1" />
			<vertex pos="10 10 0" normal="0 0 1" />
			<vertex pos="10 -10 0" normal="0 0 1" />

			<triangle_set>
				<material_name>white</material_name>
				<tri>0 1 2</tri>
				<tri>0 2 3</tri>
			</triangle_set>
		</embedded>
	</mesh>

	<model>
		<pos>0 0 0</pos>
		<scale>1.0</scale>
		<mesh_name>ground_plane_mesh</mesh_name>
	</model>

