<?xml version="1.0" encoding="utf-8"?>

<scene>

	<camera>
		<pos>0 -2 1</pos>
		<up>0 0 1</up>
		<forwards>0 1 0</forwards>

		<aperture_radius>0.0001</aperture_radius>
		<focus_distance>3.0</focus_distance>
		<aspect_ratio>1.33</aspect_ratio>
		<sensor_width>0.036</sensor_width>
		<lens_sensor_dist>0.02</lens_sensor_dist>
		<white_balance>D65</white_balance>
	</camera>


	<tonemapping>
		<!--reinhard>
			<pre_scale>1.0</pre_scale>
			<post_scale>1.0</post_scale>
		</reinhard-->
		<linear>
			<scale>6</scale>
		</linear>
	</tonemapping>
	
	
	<rectanglelight>
		<pos>0.0 0 1.995</pos>
		<width>0.1</width>
		<height>0.1</height>

		<spectrum>
			<blackbody>
				<temperature>6400</temperature>
				<gain>0.001</gain>
			</blackbody>
		</spectrum>
	</rectanglelight>
	

	
	<!-- A Sphere -->
	<material>
		<name>simple</name>
		
		<diffuse>
			<colour>1 0.5 0.2</colour>
		</diffuse>
	</material>
	
	
	<sphere>
		<center>0.5 0.0 1.0</center>
		<radius>0.3</radius>

		<material_name>simple</material_name>
	</sphere>
	
	<!-- Another Sphere -->
	<material>
		<name>simple2</name>
		
		<diffuse>
			<colour>0 0.5 0.8</colour>
		</diffuse>
	</material>
	
	
	<sphere>
		<center>-0.5 0.0 0.31</center>
		<radius>0.3</radius>

		<material_name>simple2</material_name>
	</sphere>
	
	<!--Ground Plane-->
	<material>
		<name>white</name>
		
		<diffuse>
			<colour>0.6 0.6 0.6</colour>
		</diffuse>
	</material>
	
	<mesh>
		<name>groundmesh</name>
		<normal_smoothing>false</normal_smoothing>
		<embedded>
			<expose_uv_set>
				<index>0</index>
				<name>albedo</name>
			</expose_uv_set>

			<vertex pos="-30 -30 0" normal="0 0 1" uv0="0 0" />
			<vertex pos="-30 30 0" normal="0 0 1" uv0="0 10000" />
			<vertex pos="30 30 0" normal="0 0 1" uv0="10000 10000" />
			<vertex pos="30 -30 0" normal="0 0 1" uv0="10000 0" />

			<triangle_set>
				<material_name>white</material_name>
				<tri>0 1 2</tri>
				<tri>0 2 3</tri>
			</triangle_set>
		</embedded>
	</mesh>
	
	<model>
		<pos>0 0 0</pos>
		<scale>1.0</scale>
		<mesh_name>groundmesh</mesh_name>
	</model>


</scene>


