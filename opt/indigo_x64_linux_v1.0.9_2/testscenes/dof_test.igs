<?xml version="1.0" encoding="utf-8"?>

<scene>

	<skylight>
		<sundir>0 0.3 1</sundir>
		<turbidity>2</turbidity>
	</skylight>

	<camera>
		<pos>2 0 3</pos>
		<up>0 0 1</up>
		<forwards>1 0 0</forwards>

		<aperture_radius>0.02</aperture_radius>
		<focus_distance>10000.0</focus_distance>
		<aspect_ratio>1.33</aspect_ratio>
		<sensor_width>0.036</sensor_width>
		<lens_sensor_dist>0.03</lens_sensor_dist>
		<white_balance>D65</white_balance>
		
	</camera>
	
	<tonemapping>
		<reinhard>
			<pre_scale>2.0</pre_scale>
			<post_scale>1.0</post_scale>
		</reinhard>
		<!--linear>
			<scale>500.0</scale>
		</linear-->
	</tonemapping>
	
	<mesh>
		<name>prism</name>
		<normal_smoothing>false</normal_smoothing>
		<external>
			<path>prism\prism.3ds</path>
		</external>
	</mesh>
	
	<!-- Override the prism material-->
	<material>
		<name>prismmat</name>
		
		<phong>
			<diffuse>0.0 1.0 0.0</diffuse>
			<ior>1.5</ior>
			<exponent>10000</exponent>
		</phong>
	</material>
	

	<model>
		<rotation>
			<matrix>
				0.970275 0.239186 0.036835 -0.100456 0.536542 -0.837873 -0.220172 0.809267 0.544621 
			</matrix>
		</rotation>
		<pos>10 -2 -0.457799</pos>
		<scale>1.0</scale>
		
		<mesh_name>prism</mesh_name>
	</model>
	
	<material>
		<name>prismmat</name>
		
		<phong>
			<diffuse>1.0 0.0 0.0</diffuse>
			<ior>1.5</ior>
			<exponent>10000</exponent>
		</phong>
	</material>
	
	<model>
		<rotation>
			<matrix>
				0.970275 0.239186 0.036835 -0.100456 0.536542 -0.837873 -0.220172 0.809267 0.544621 
			</matrix>
		</rotation>
		<pos>5 1 -0.457799</pos>
		<scale>1.0</scale>
		<mesh_name>prism</mesh_name>
		
	</model>
	
	<material>
		<name>prismmat</name>
		
		<phong>
			<diffuse>0.0 0.0 1.0</diffuse>
			<ior>1.5</ior>
			<exponent>10000</exponent>
		</phong>
	</material>
	
	<model>
		<rotation>
			<matrix>
				0.970275 0.239186 0.036835 -0.100456 0.536542 -0.837873 -0.220172 0.809267 0.544621 
			</matrix>
		</rotation>
		<pos>15 0 -0.457799</pos>
		<scale>1.0</scale>
		<mesh_name>prism</mesh_name>

	</model>
	


	
	<!--Ground Plane-->
	<material>
		<name>white</name>
		
		<diffuse>
			<colour>0.6 0.6 0.6</colour>
		</diffuse>
	</material>
	
	<mesh>
		<name>groundmesh</name>
		<normal_smoothing>false</normal_smoothing>
		<embedded>
			<expose_uv_set>
				<index>0</index>
				<name>albedo</name>
			</expose_uv_set>

			<vertex pos="-30 -30 1" normal="0 0 1" uv0="0 0" />
			<vertex pos="-30 30 1" normal="0 0 1" uv0="0 10000" />
			<vertex pos="30 30 1" normal="0 0 1" uv0="10000 10000" />
			<vertex pos="30 -30 1" normal="0 0 1" uv0="10000 0" />

			<triangle_set>
				<material_name>white</material_name>
				<tri>0 1 2</tri>
				<tri>0 2 3</tri>
			</triangle_set>
		</embedded>
	</mesh>
	
	<model>
		<pos>0 0 0</pos>
		<scale>1.0</scale>
		<mesh_name>groundmesh</mesh_name>
	</model>

</scene>
