<?xml version="1.0" encoding="utf-8"?>

<scene>

	<camera>
		<pos>0 -2 1</pos>
		<up>0 0 1</up>
		<forwards>0 1 0.02</forwards>
		
		<!--pos>0 -2 2</pos>
		<up>0 0 1</up>
		<forwards>0 1 0.02</forwards-->

		<aperture_radius>0.0001</aperture_radius>
		<focus_distance>3.0</focus_distance>
		<aspect_ratio>1.33</aspect_ratio>
		<sensor_width>0.036</sensor_width>
		<lens_sensor_dist>0.02</lens_sensor_dist>
		<white_balance>D65</white_balance>
	</camera>


	<tonemapping>
		<reinhard>
			<pre_scale>1.0</pre_scale>
			<post_scale>1.0</post_scale>
		</reinhard>
		<!--linear>
			<scale>0.1</scale>
		</linear>-->
	</tonemapping>


	<rectanglelight>
		<pos>0.0 0 1.995</pos>
		<!--width>0.1</width>
		<height>0.1</height-->
		<width>0.3</width>
		<height>0.3</height>

		<spectrum>
			<blackbody>
				<temperature>6400</temperature>
				<gain>0.001</gain>
			</blackbody>
		</spectrum>
	</rectanglelight>

	<medium>
		<name>high_ior_dielectric</name>
		
		<precedence>21</precedence>
		<basic>
			<ior>100.0</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			
			<absorption_coefficient_spectrum>
				<uniform>
					<value>0</value>
				</uniform>
			</absorption_coefficient_spectrum>
			
		</basic>
	</medium>

	<material>
		<name>specmetal</name>

		<specular>
			<transparent>false</transparent>
			
			<internal_medium_name>high_ior_dielectric</internal_medium_name>
			<!--bump_map>
				<uv_set>bump</uv_set>
				<path>indigo3.jpg</path>
				<gain>0.1</gain>
				<exponent>1.0</exponent>
			</bump_map-->
		</specular>

	</material>
	
	
	
	
	<medium>
		<name>smoke_filled_air</name>
		
		<precedence>2</precedence>
		
		<basic>
			<ior>1.0</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<uniform>
					<value>0</value>
				</uniform>
			</absorption_coefficient_spectrum>
			
			
			<subsurface_scattering>
				<scattering_coefficient_spectrum>
					<uniform>
						<value>0.3</value>
					</uniform>
					<!--rgb>
						<rgb>0.3 0.29 0.28</rgb>
						<gamma>1</gamma>
					</rgb-->
				</scattering_coefficient_spectrum>
				
				<phase_function>
					<uniform></uniform>
				</phase_function>
			</subsurface_scattering>
			</basic>
	</medium>
	
	<material>
		<name>smoke_sphere</name>

		<specular>
			<transparent>true</transparent>
			<internal_medium_name>smoke_filled_air</internal_medium_name>
		</specular>
	</material>
	
	
	<sphere>
		<center>0 0 1</center>
		<radius>3</radius>

		<material_name>smoke_sphere</material_name>
	</sphere>
	
	
	
	
	
	<medium>
		<name>glass</name>
		
		<precedence>20</precedence>
		<basic>
			<ior>1.5</ior>
			<cauchy_b_coeff>0.0</cauchy_b_coeff>
			<absorption_coefficient_spectrum>
				<rgb>
					<rgb>10 0 0</rgb>
					<gamma>1</gamma>
				</rgb>
			</absorption_coefficient_spectrum>
		</basic>
		
	</medium>

	<material>
		<name>glass</name>

		<specular>
			<transparent>true</transparent>
			<internal_medium_name>glass</internal_medium_name>
		</specular>
	</material>


	<material>
		<name>chrome</name>

		<phong>
			<diffuse_albedo_spectrum>
				<uniform>
					<value>0</value>
				</uniform>
			</diffuse_albedo_spectrum>
			<exponent>1000</exponent>
			<ior>100</ior>
		</phong>
	</material>

	<sphere>
		<center>-0.5 0 0.5</center>
		<radius>0.6</radius>

		<material_name>chrome</material_name>
	</sphere>


	<sphere>
		<center>0.5 0.0 1.0</center>
		<radius>0.3</radius>

		<material_name>glass</material_name>
	</sphere>
	
	

</scene>


