#!/bin/sh
# postinst script for libsensors4
#
# Mostly stolen from the Debian xdm scripts
# Copyright 1998, 1999 Branden Robinson.  Licensed under the GNU GPL.
# Acknowlegements to Stephen Early, Mark Eichin, and Manoj Srivastava.
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
	# Create the device node if MAKEDEV exists
	if [ -x /sbin/MAKEDEV ] ; then
		if [ ! -c /dev/i2c-0 ]; then
			(cd /dev && /sbin/MAKEDEV i2c) || true
		fi
	fi
	# Create the configuration file
	ucf --debconf-ok --three-way /usr/share/libsensors4/sensors.conf.eg /etc/sensors3.conf
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_makeshlibs
if [ "$1" = "configure" ]; then
	ldconfig
fi
# End automatically added section


exit 0
